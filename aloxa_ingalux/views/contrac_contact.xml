<?xml version="1.0"?>
<openerp>
<data>

<!--  Tree View Contacts in contract -->
	
	<record id="contract_contact_view_tree" model="ir.ui.view">
 		<field name="name">Contacts</field>
 		<field name="model">ingalux.contract.contact</field>	 		
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Contacts">
				<field name="partner_id"/>
				<field name="description"/>  	
			</tree>
		</field>
	</record>
	
	<record id="contract_contact_view_form" model="ir.ui.view">
 		<field name="name">contract.contact.view.form</field>
 		<field name="model">ingalux.contract.contact</field> 		
		<field name="type">form</field>
		<field name="arch" type="xml">
		<form string="Contacts">
			<group>        	
	        	      <field name="partner_id"/>
	        	      <field name="description"/>	        	
        	         </group>
		</form>
		</field>
	</record>
	
</data>
</openerp>
	